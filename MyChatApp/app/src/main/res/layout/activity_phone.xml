<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneActivity">
    <include
        android:id="@+id/phone_login_toolbar"
        layout="@layout/main_toolbar">
    </include>
    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_login_toolbar"
        android:text="Enter Phone Number :-"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#000000">
    </TextView>
    <EditText
        android:id="@+id/phone_number_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_number_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Type here"
        android:textSize="30dp"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_otp"
        android:text="Send otp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/phone_number_edit"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"

        android:layout_marginTop="20dp">

    </Button>
    <TextView
        android:id="@+id/phone_otp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_login_toolbar"
        android:text="Enter OTP :-"
        android:textSize="30dp"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:textColor="#000000">
    </TextView>
    <EditText
        android:id="@+id/phone_otp_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_otp_text"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:hint="Type here"
        android:textSize="30dp"
        android:visibility="invisible"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verify_user"
        android:text="Verify user"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/phone_otp_edit"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_marginTop="20dp">
    </Button>
</RelativeLayout>